#C compiler
CC=gcc

#Result file
TARGET=irvingalong.a

#Archive creator
AR=ar

#Along32 source directory
ALONG32_SRC=../Along32/src

#Make program
MAKE=make

#Objects to compile
OBJS=irvingt.o irvingt-real.o irvingt-proc.o Along32.o

#C compiler flags
CFLAGS=-m32 -Wall -Wextra -std=gnu89 -O2 -g -DIRVINGT_HAVE_ALONG

CURRENT_DIR=$(PWD)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) rcs $(TARGET) $(OBJS)

.SUFFIXES: .c .S .o

.c.o:
	$(CC) -c $(CFLAGS) -o $@ $<

.S.o:
	$(CC) -c $(CFLAGS) -o $@ $<

Along32.o:
	cd $(ALONG32_SRC) \
	&& $(MAKE) Along32.o \
	&& cp Along32.o $(CURRENT_DIR)

.PHONY: clean

clean:
	rm -f $(TARGET) $(OBJS)
